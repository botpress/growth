    "dep:fix": "ts-node -T ./scripts/depsynky sync",
    "check": "pnpm dep:check && pnpm format:check && pnpm lint:check && pnpm type:check",
    "test": "pnpm vitest --run",
    "fix": "pnpm dep:fix && pnpm format:fix && pnpm lint:fix"
  },
